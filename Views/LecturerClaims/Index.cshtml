@model IEnumerable<ContractPoe.Models.LecturerClaim>

<table class="table">
    <thead>
        <tr>
            <th>ClaimId</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Additional Notes</th>
            <th>Document</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNotes</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.DocumentPath))
                    {
                        <a href="@claim.DocumentPath" target="_blank">View Document</a>
                    }
                </td>
                <td>@(claim.IsApproved ? "Approved" : "Pending")</td>
                <td>
                    @if (!claim.IsApproved)
                    {
                        <a asp-action="Approve" asp-route-id="@claim.ClaimId" class="btn btn-success">Approve</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
