@model IEnumerable<ContractPoe.Models.LecturerClaim>

@{
    ViewData["Title"] = "Track Claims";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Additional Notes</th>
            <th>Submission Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNotes</td>
                <td>@claim.Lecturer.Name</td> 
                <td>@claim.TotalAmount</td>
                <td>@claim.IsApproved</td>
                <td>@claim.SubmissionDate</td>
            </tr>
        }
    </tbody>
</table>
