@{
    ViewData["Title"] = "Lecturer Claims";
}

<h2>Lecturer Claims</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Additional Notes</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNotes</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.DocumentPath))
                    {
                        <a href="@claim.DocumentPath" target="_blank">View Document</a>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Approve", "Review", new { id = claim.ClaimId })" class="btn btn-success">Approve</a>
                </td>
            </tr>
        }
    </tbody>
</table>
